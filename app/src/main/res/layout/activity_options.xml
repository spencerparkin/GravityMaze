<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <TableLayout
        android:layout_width="306dp"
        android:layout_height="241dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonSaveAndExit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.299">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gravityLabel"
                android:textAlignment="viewEnd"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBarGravity"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="90" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/bounceLabel"
                android:textAlignment="viewEnd"
                android:textSize="24sp" />

            <SeekBar
                android:id="@+id/seekBarBounce"
                android:layout_width="166dp"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="30" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/buttonSaveAndExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:text="@string/saveAndExit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>